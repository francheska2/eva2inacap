<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalderasActivity">


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvTituloCalderas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♨️ SENSOR CALDERAS ♨️"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nuevo Switch para Activar/Desactivar Sensor -->
    <Switch
        android:id="@+id/switchSensor"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:text="Sensor de Calderas Activo"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCalderas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Fin del nuevo Switch -->

    <TextView
        android:id="@+id/tvStatusCalderas"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="Cargando Estado..."
        android:background="#88000000"
        android:textColor="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/switchSensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Temperatura -->
    <TextView
        android:id="@+id/tvTemperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura de Operación:"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusCalderas"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTemperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- °C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvTemperatureLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAFFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTemperatureValue" />

    <!-- Nivel de Agua -->
    <TextView
        android:id="@+id/tvWaterLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de Agua:"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWaterLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- %"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvWaterLevelLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAFFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWaterLevelValue" />

    <!-- Nivel de Gas -->
    <TextView
        android:id="@+id/tvGasLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de Gas (Riesgo):"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvGasLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- unidades"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvGasLevelLabel"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>